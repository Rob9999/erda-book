{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Orchestrator (local) - German",
            "type": "debugpy",
            "request": "launch",
            "module": "gitbook_worker.tools.workflow_orchestrator",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            },
            "args": [
                "run",
                "--root",
                "${workspaceFolder}",
                "--manifest",
                "de/publish.yml",
                "--profile",
                "local",
                "--lang",
                "de"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Orchestrator (local) - English",
            "type": "debugpy",
            "request": "launch",
            "module": "gitbook_worker.tools.workflow_orchestrator",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            },
            "args": [
                "run",
                "--root",
                "${workspaceFolder}",
                "--manifest",
                "en/publish.yml",
                "--profile",
                "local",
                "--lang",
                "en"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Orchestrator (ERDA Smart Worker)",
            "type": "debugpy",
            "request": "launch",
            "module": "gitbook_worker.tools.docker.run_docker",
            "cwd": "${workspaceFolder}",
            "args": [
                "orchestrator",
                "--profile",
                "default",
                "--use-dynamic",
                "--manifest",
                "de/publish.yml",
                "--lang",
                "de"
            ],
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            },
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Orchestrator (ERDA Smart Worker - fresh rebuild)",
            "type": "debugpy",
            "request": "launch",
            "module": "gitbook_worker.tools.docker.run_docker",
            "cwd": "${workspaceFolder}",
            "args": [
                "orchestrator",
                "--profile",
                "default",
                "--use-dynamic",
                "--manifest",
                "de/publish.yml",
                "--lang",
                "de",
                "--rebuild",
                "--no-cache"
            ],
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            },
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Orchestrator (Docker Legacy)",
            "type": "debugpy",
            "request": "launch",
            "module": "gitbook_worker.tools.docker.run_docker",
            "cwd": "${workspaceFolder}",
            "args": [
                "orchestrator",
                "--profile",
                "default",
                "--manifest",
                "de/publish.yml",
                "--lang",
                "de"
            ],
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            },
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Emoji and Font Couverage",
            "type": "debugpy",
            "request": "launch",
            "module": "gitbook_worker.tools.emoji.scan_emojis",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            },
            "args": [],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Update Local Environment",
            "type": "debugpy",
            "request": "launch",
            "module": "pip",
            "cwd": "${workspaceFolder}",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Build Font (with cache refresh)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.github/fonts/erda-ccby-cjk/generator/build_ccby_cjk_font.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/.github/fonts/erda-ccby-cjk/generator",
            "args": [
                "--refresh-cache"
            ]
        },
        {
            "name": "Build Font (no cache refresh)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.github/fonts/erda-ccby-cjk/generator/build_ccby_cjk_font.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/.github/fonts/erda-ccby-cjk/generator",
            "args": []
        },
    ]
}